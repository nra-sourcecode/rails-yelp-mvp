<h1><%=@restaurant.name%></h1>
<p>The address is: <%=@restaurant.address%></p>
<p>The phonenumber is: <%=@restaurant.phone_number%></p>
<p>The category is: <%=@restaurant.category%></p>

<h3>Reviews</h3>
<%@reviews.each do |review|%>
<li><%=review.content%> | <%=review.rating%></li>
<%end%>

<h5>Add review</h5>
<%= simple_form_for [@restaurant, @review] do |f|%>
<%=f.input :content%>
<%=f.input :rating%>
<%=f.submit%>
<%end%>





<%=link_to "Back", restaurants_path%>
